/* pages/issue/issue.wxss */
.contain{
  width:100%;
  display: flex;
  flex-direction: column;
}

.chooseimg{
  width:100%;
  height:100rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1rpx grey solid;
}

.chooseimg>view:nth-child(1){
  margin-left:4%;
  font-size:28rpx;
}

.chooseimg>.img{
  margin-right:4%;
  width:75rpx;
  height:60rpx;
}

.chooseimg>.img>image{
  width:100%;
  height:100%;
}

.dynamic{
  width:100%;
  display: flex;
  margin-top:20rpx;
  flex-direction: column;
  align-items: center;
  /* background-color:red; */
}

.dynamic_top{
  width:92%;
  font-size:28rpx;
  height:50rpx;
  line-height: 50rpx;
  /* background-color:green; */
}

.box{
  margin-top:25rpx;
  width:92%;
  display: flex;
  flex-direction: column;
  border-bottom:1px solid rgb(196, 195, 195);
}

.box>.img{
  width:100%;
  height:400rpx;
  
}

.box>.img>image{
  width:100%;
  height:100%;
  border-radius: 10rpx;
}

.row_text{
  margin-top:15rpx;
  width:100%;
  text-indent: 40rpx;
  letter-spacing:5rpx;
  font-size:28rpx;
}

.row_info{
  margin-top:10rpx;
  width:100%;
  height:60rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  /* background-color:red; */
}

.row_info>.img{
  height:60rpx;
  display: flex;
  align-items: center;
  /* background-color:green; */
}

.row_info>.img>image{
  width:50rpx;
  height:50rpx;
  border-radius: 50rpx;
  margin-right:10rpx;
}

.row_info>.img>view{
  font-size:24rpx;
}

.row_time{
  height:50rpx;
  line-height: 50rpx;
  font-size:24rpx;
  /* background-color:blue; */
}

.comment{
  width:100%;
  height:35rpx;
  /* background-color:red; */
  line-height: 35rpx;
  font-size:20rpx;
  
}

.row_comment{
  margin-top:10rpx;
  margin-bottom:30rpx;
  width:100%;
  height:50rpx;
  background-color:rgb(221, 221, 221);
  line-height: 50rpx;
  border-radius:5rpx;
  display:flex;
}

.row_comment_left{
  margin-left:10rpx;
  width:70%;
  height:100%;
  /* background-color:red; */
}

.row_comment_left>input{
  font-size:25rpx;
}

.row_comment_right{
  width:15%;
  height:100%;
  margin-left:13%;
}

button{
  width:100%;
  height:50rpx;
  line-height:50rpx;
  font-size:22rpx;
  text-align:center;
}

.row_comment_plachholder{
  margin-left:5rpx;
  font-size:22rpx;
}