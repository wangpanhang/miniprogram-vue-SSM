/* pages/classify/classify.wxss */
.contain{
  width:100%;
  height:100vh;
  display: flex;
  flex-direction: row;
}

.scroll-view{
  width:25%;
  height:100vh;
  background-color:rgb(207, 207, 207);
}

.food_class{
  width:100%;
  height:100rpx;
  text-align: center;
  line-height: 100rpx;
}

.active{
  border-left:5rpx rgb(255, 117, 117) solid;
  background-color:white;
}

.scroll-view1{
  width:72%;
  height:100vh;
  margin-left:4%;
}

.food{
  width:100%;
  height:220rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom:15rpx;
}

.img{
  width:35%;
  height:80%;
}

image{
  width:100%;
  height:100%;
  border-radius: 10rpx;
}

.content{
  width:61%;
  height:100%;
  margin-left:4%;
  border-bottom: 1rpx rgb(228, 228, 228) solid;
  display: flex;
  align-items: center;
}

.content_list{
  width:100%;
  height:75%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.title{
  font-size:18px;
  color:black;
}

.dosing{
  white-space: nowrap;
  overflow: hidden;
	text-overflow:ellipsis;
}

.font{
  font-size:11px;
  color:grey;
}